<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Profile</h3>
    </div>
    <div class="box-body">
        <form class="form-horizontal" method="post">

            <% if(typeof msg !== 'undefined') { %>
                <div class="callout <%= msg.class %>">
                    <p><%= msg.info %></p>
                </div>
            <%}%>

            <div class="form-group">
                <label class="col-sm-2 control-label">Tên thông số</label>
                <div class="col-sm-10">
                    <input type="text" name="name" class="form-control" value="<%= option.name %>" placeholder="Name">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Chuyên mục</label>
                <div class="col-sm-10">
                    <select class="form-control" name="parent_id">

                        <option value="0">parent</option>
                        <% for(var i=0; i<parent.length; i++) { %>
                            <option value="<%= parent[i].id %>" <% if(option.parent_id==parent[i].id) { %> <%- 'selected="selected"' %> <% } %>><%= parent[i].name %></option>
                        <% } %>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Loại</label>
                <div class="col-sm-10">
                    <select class="form-control" name="type">
                        <option value="input" <% if(option.type=='input') { %> <%- 'selected="selected"' %> <% } %>>Văn bản</option>
                        <option value="select" <% if(option.type=='select') { %> <%- 'selected="selected"' %> <% } %>>Lựa chọn</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">Lưu</button>
                </div>
            </div>
        </form>
    </div>
</div>
